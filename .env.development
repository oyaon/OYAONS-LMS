# DEVELOPMENT Environment Configuration

# API Configuration
VITE_REACT_APP_API_URL=http://localhost:5000
VITE_REACT_APP_API_TIMEOUT=10000

# Security Features
VITE_REACT_APP_ENABLE_RATE_LIMIT=false
VITE_REACT_APP_RATE_LIMIT_WINDOW=60000
VITE_REACT_APP_RATE_LIMIT_MAX_REQUESTS=100

VITE_REACT_APP_ENABLE_CSRF=false
VITE_REACT_APP_CSRF_TOKEN_HEADER=X-CSRF-Token

VITE_REACT_APP_ENABLE_AUDIT_LOG=true
VITE_REACT_APP_AUDIT_LOG_LEVEL=debug

# Authentication
VITE_REACT_APP_AUTH_TOKEN_KEY=development_auth_token
VITE_REACT_APP_AUTH_REFRESH_TOKEN_KEY=development_refresh_token
VITE_REACT_APP_AUTH_TOKEN_EXPIRY=3600

# Feature Flags
VITE_REACT_APP_ENABLE_EXPORT=true
VITE_REACT_APP_ENABLE_BULK_ACTIONS=true
VITE_REACT_APP_ENABLE_ADVANCED_FILTERS=true

# Pagination
VITE_REACT_APP_DEFAULT_PAGE_SIZE=10
VITE_REACT_APP_MAX_PAGE_SIZE=100

# Error Handling
VITE_REACT_APP_SHOW_ERROR_DETAILS=true
VITE_REACT_APP_ERROR_MESSAGE_DURATION=5000

# Database Configuration
VITE_REACT_APP_DB_HOST=localhost
VITE_REACT_APP_DB_PORT=27017
VITE_REACT_APP_DB_NAME=library_development

# Email Configuration
VITE_REACT_APP_EMAIL_HOST=smtp.development.com
VITE_REACT_APP_EMAIL_PORT=587
VITE_REACT_APP_EMAIL_USER=development@example.com
VITE_REACT_APP_EMAIL_PASSWORD=development_password

# File Upload Configuration
VITE_REACT_APP_MAX_FILE_SIZE=5242880
VITE_REACT_APP_ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf

# Cache Configuration
VITE_REACT_APP_CACHE_ENABLED=true
VITE_REACT_APP_CACHE_TTL=3600

# Monitoring
VITE_REACT_APP_ENABLE_MONITORING=true
VITE_REACT_APP_MONITORING_INTERVAL=300000
